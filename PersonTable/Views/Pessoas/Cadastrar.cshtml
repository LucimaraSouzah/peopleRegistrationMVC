@model PersonTable.Models.Pessoas

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastro</title>
</head>
<body>
    <h1>Cadastrar</h1>

    <form asp-action="Cadastrar" asp-controller="Pessoas" method="post">
        <div class="form-horizontal">
            <hr />
            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger"></div>
            }
            <div class="form-group">
                <label>Nome</label>
                <div class="col-md-10">
                    <input asp-for="Nome" />
                </div>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Endereço</label>
                <div class="checkbox">
                    <input asp-for="Endereço" />
                </div>
                <span asp-validation-for="Endereço" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="reset" value="Limpar" class="btn btn-default" />
                    <input type="submit" value="Cadastrar" class="btn btn-default" />
                </div>
            </div>
            <hr />
        </div>
    </form>

    <div>
        <a asp-controller="Pessoas" asp-action="Index">Voltar</a>
    </div>

</body>
</html>